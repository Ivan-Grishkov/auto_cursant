@model AutoCadet.Areas.Admin.Models.ServicesManagePageViewModel
@{
    ViewBag.Title = "Manage Training";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutWithLogin.cshtml";
}

<section class="container-fluid">
    <div class="container">
        <div class="row">
            <h2>Manage Training</h2>

            @using (Html.BeginForm("ManageTraining", "Admin", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.HiddenFor(x => x.ServiceViewModel.Id)

                <div class="form-group error">
                    @Html.ValidationSummary()
                </div>

                <div class="form-group">
                    <label for="firstName">ListHeader:</label>
                    @Html.TextBoxFor(x => x.ServiceViewModel.ListHeader, new { @class = "form-control", id = "firstName" })
                </div>

                <div class="form-group">
                    <label for="ListDescription">ListDescription:</label>
                    @Html.TextBoxFor(x => x.ServiceViewModel.ListDescription, new { @class = "form-control", id = "ListDescription" })
                </div>

                <div class="form-group">
                    <label for="ListIcon">ListIcon http://fontawesome.io/icons/  (пример: fa-file) :   </label>
                    @Html.TextBoxFor(x => x.ServiceViewModel.ListIcon, new { @class = "form-control", id = "ListIcon" })
                </div>

                <div class="form-group">
                    <label for="lastName">SortingNumber:</label>
                    @Html.TextBoxFor(x => x.ServiceViewModel.SortingNumber, new { @class = "form-control", id = "lastName" })
                </div>

                <div class="form-group">
                    <label for="Email">UrlName:</label>
                    @Html.TextBoxFor(x => x.ServiceViewModel.UrlName, new { @class = "form-control", id = "Email" })
                </div>

                <div class="form-group">
                    <label for="Price">DetailText </label>
                    @Html.TextBoxFor(x => x.ServiceViewModel.DetailText, new { @class = "form-control", id = "Price" })
                </div>

                <div class="form-group">
                    @if (Model.ServiceViewModel.ThumbnailImageFile != null && Model.ServiceViewModel.ThumbnailImageFile.Length > 0)
                    {
                        string base64String = Convert.ToBase64String(Model.ServiceViewModel.ThumbnailImageFile);
                        <img src="@($"data:image/png;base64,{base64String}")" />
                    }
                </div>
                <div class="form-group">
                    <label for="itemFile">Фото details:</label>
                    <input type="file" name="itemFile" id="itemFile" />
                </div>

                <div class="form-group">
                    <label for="IsActive">IsActive:</label>
                    @Html.CheckBoxFor(x => x.ServiceViewModel.IsActive, new { @class = "form-control", id = "IsActive" })
                </div>

                if (Model.MetadataInfo != null)
                {

                    @Html.HiddenFor(x => x.MetadataInfo.Id)

                    <div class="form-group">
                        <label for="Title">Meta Title:</label>
                        @Html.TextBoxFor(x => x.MetadataInfo.Title, new { @class = "form-control", id = "Title" })
                    </div>

                    <div class="form-group">
                        <label for="H1">Meta H1:</label>
                        @Html.TextBoxFor(x => x.MetadataInfo.H1, new { @class = "form-control", id = "H1" })
                    </div>

                    <div class="form-group">
                        <label for="Description">Meta Description:</label>
                        @Html.TextBoxFor(x => x.MetadataInfo.Description, new { @class = "form-control", id = "Description" })
                    </div>

                    <div class="form-group">
                        <label for="Info">Meta Info:</label>
                        @Html.TextBoxFor(x => x.MetadataInfo.Info, new { @class = "form-control", id = "Info" })
                    </div>

                    <div class="form-group">
                        <label for="Keywords">Meta Keywords:</label>
                        @Html.TextBoxFor(x => x.MetadataInfo.Keywords, new { @class = "form-control", id = "Keywords" })
                    </div>
                }

                <input type="submit" class="btn btn-primary" value="Save">
                @Html.ActionLink("Cancel", "Training", "Admin", new { @class = "btn btn-default" })
            }
        </div>
    </div>
</section>