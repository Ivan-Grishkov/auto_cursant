@model AutoCadet.Models.ShareEventViewModel

@{
    ViewBag.Title = "Акция";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutWithLogin.cshtml";
}
<section class="container-fluid">
    <div class="container">
        @if (ViewBag.IsSuccess == true)
        {
            <div class="row text-success">
                Данные сохранены успешно
            </div>
        }
        <div class="row text-danger">
            @Html.ValidationSummary()
        </div>
        <div class="row">
            @using (Html.BeginForm("ShareEvent", "Admin"))
            {
                @Html.HiddenFor(x=>x.Id)
                <div class="form-group error">
                    @Html.ValidationSummary()
                </div>

                <div class="form-group">
                    <label for="Header">Заголовок:</label>
                    @Html.TextBoxFor(x => x.Header, new { @class = "form-control", id = "Header" })
                </div>

                <div class="form-group">
                    <label for="Text">Основной текст HTML:</label>
                    @Html.TextAreaFor(x => x.Text, new { @class = "form-control", id = "Text" })
                </div>

                <div class="form-group">
                    <label for="TinyText">Мелкий текст справа:</label>
                    @Html.TextBoxFor(x => x.TinyText, new { @class = "form-control", id = "TinyText" })
                </div>

                <div class="form-group">
                    <label for="IsActive">IsActive:</label>
                    @Html.CheckBoxFor(x => x.IsActive, new { @class = "form-control", id = "IsActive" })
                </div>

                if (Model.Metadata != null)
                {

                    @Html.HiddenFor(x => x.Metadata.Id)

                    <div class="form-group">
                        <label for="Title">Meta Title:</label>
                        @Html.TextBoxFor(x => x.Metadata.Title, new { @class = "form-control", id = "Title" })
                    </div>

                    <div class="form-group">
                        <label for="H1">Meta H1:</label>
                        @Html.TextBoxFor(x => x.Metadata.H1, new { @class = "form-control", id = "H1" })
                    </div>

                    <div class="form-group">
                        <label for="Description">Meta Description:</label>
                        @Html.TextBoxFor(x => x.Metadata.Description, new { @class = "form-control", id = "Description" })
                    </div>

                    <div class="form-group">
                        <label for="Info">Meta Info:</label>
                        @Html.TextBoxFor(x => x.Metadata.Info, new { @class = "form-control", id = "Info" })
                    </div>

                    <div class="form-group">
                        <label for="Keywords">Meta Keywords:</label>
                        @Html.TextBoxFor(x => x.Metadata.Keywords, new { @class = "form-control", id = "Keywords" })
                    </div>
                }

                <br/>
                <div class="row">
                    <input type="submit" value="Save" class="btn btn-primary"/>
                </div>
            }
        </div>
    </div>
</section>