@model IList<AutoCadet.Models.CommentViewModel>

@{
    ViewBag.Title = "Comments";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutWithLogin.cshtml";
}

<section class="container-fluid">
    <div class="container">
        @if (ViewBag.IsSuccess == true)
        {
            <div class="row text-success">
                Данные сохранены успешно
            </div>
        }
        <div class="row text-danger">
            @Html.ValidationSummary()
        </div>
        <div class="row">
            @using (Html.BeginForm("Comments", "Admin"))
            {
                <table class="irstructors-table table">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Created Date</th>
                        <th>Score</th>
                        <th>Text</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>InstructorName</th>
                        <th>IsVisibleInList</th>
                        <th>IsActive</th>
                    </tr>
                    </thead>
                    <tbody>
                    @{
                        if (Model != null)
                        {
                            for (var i = 0; i < Model.Count; i++)
                            {
                                <tr>
                                    <td>
                                        @Html.HiddenFor(x => Model[i].Id)
                                        @Html.HiddenFor(x => Model[i].InstructorId)
                                        @Html.TextBoxFor(x => Model[i].Name, new { @class = "form-control" })
                                    </td>
                                    <td>
                                        @Html.DisplayFor(x => Model[i].CreatedDate)
                                    </td>
                                    <td>
                                        @Html.TextBoxFor(x => Model[i].Score, new { @class = "form-control", type="number" })
                                    </td>
                                    <td>
                                        @Html.TextBoxFor(x => Model[i].Text, new { @class = "form-control" })
                                    </td>
                                    <td>
                                        @Html.TextBoxFor(x => Model[i].Email, new { @class = "form-control" })
                                    </td>
                                    <td>
                                        @Html.TextBoxFor(x => Model[i].Phone, new { @class = "form-control" })
                                    </td>
                                    <td>
                                        @Model[i].InstructorName
                                    </td>
                                    <td>
                                        @Html.CheckBoxFor(x => Model[i].IsVisibleInList, new {@class = "form-control"})
                                    </td>
                                    <td>
                                        @Html.CheckBoxFor(x => Model[i].IsActive, new {@class = "form-control"})
                                    </td>
                                </tr>
                            }
                        }
                    }
                    </tbody>
                </table>
                <br/>
                <input type="submit" value="Save" class="btn btn-primary"/>
            }
        </div>
    </div>
</section>