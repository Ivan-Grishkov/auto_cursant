@model IList<AutoCadet.Models.InstructorViewModel>

@{
    ViewBag.Title = "Instructors";
    Layout = "~/Views/Shared/_LayoutWithLogin.cshtml";
}
<section class="container-fluid">
    <div class="container">
        <div class="row">
            @using (Html.BeginForm("Index", "Admin"))
            {
                @Html.ValidationSummary()
                <table class="irstructors-table">
                    <thead>
                    <tr>
                        <th></th>
                        <th>Ф.И.О.</th>
                        <th>Активен?</th>
                        <th>Номер в списке</th>
                        <th>Картинка в списке</th>
                    </tr>
                    </thead>
                    <tbody>
                    @{
                        for (int i=0; i < Model.Count; i++)
                        {
                            <tr>
                                <td>
                                    @Html.HiddenFor(x => Model[i].Id)
                                    @Html.ActionLink("Edit", "ManageInstructor", "Admin", new {instructorId = Model[i].Id}, null)
                                </td>
                                <td>
                                    @($"{Model[i].FirstName} {Model[i].LastName}")
                                </td>
                                <td>
                                    @Html.CheckBoxFor(x => Model[i].IsActive)
                                </td>
                                <td>
                                    @Html.TextBoxFor(x => Model[i].SortingNumber)
                                </td>
                                <td>
                                    @{
                                        if (Model[i].ThumbnailImage != null && Model[i].ThumbnailImage.Length > 0)
                                        {
                                            var base64String = Convert.ToBase64String(Model[i].ThumbnailImage);
                                            <img src="@($"data:image/png;base64,{base64String}")" width="50px" height="50px"/>
                                        }
                                    }
                                </td>
                            </tr>
                        }
                    }
                    </tbody>
                </table>

                <br/>
                <div class="row">
                    @Html.ActionLink("Create", "ManageInstructor", "Admin", null, new {@class = "btn btn-default"})
                    <input type="submit" value="Save" class="btn btn-primary"/>
                </div>
            }
        </div>
    </div>
</section>