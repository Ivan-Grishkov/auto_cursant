@model AutoCadet.Models.BlogListPageViewModel
@{
    Layout = "~/Views/Shared/_DetailsPageLayout.cshtml";
    ViewBag.HeaderTitle = "Полезные советы";
    ViewBag.HeaderSubTitle = "Рекомендации от инструкторов по вождению";

    ViewData["MetaInfo"] = "Полезные советы от инструкторов по вождению. Как сдать экзамен в ГАИ, как правильно водить и многие другие рекомендации читайте на сайте uroki-vozhdeniya.by";
    ViewData["MetaDescription"] = "Полезные советы от инструкторов по вождению. Как сдать экзамен в ГАИ, как правильно водить и многие другие рекомендации читайте на сайте uroki-vozhdeniya.by";
    ViewData["MetaKeywords"] = "Полезные советы, сдать экзамен по вождению";
    ViewData["Title"] = "Полезные советы сдающим на категорию B";
}

@{
    var pageUrl = Url.Action("Blog", "Home", null, Request?.Url?.Scheme);
}

@section detailsH1 {
<div class="col-md-9">
    <h1 class="section-heading">
        Полезные советы сдающим на категорию B
    </h1>
</div>
<div class="col-md-3">
    <span class="pull-right">
        @{ Html.RenderPartial("_SocialButtons", pageUrl); }
    </span>
</div>
}

@section breadcrumb {
    <ul class="breadcrumb">
        <li>
            <a href="/">Главная</a>
        </li>
        <li class="active">Полезные советы</li>
    </ul>
}

<section id="portfolio" class="bg-light-gray">
    <div class="container">
        @{ Html.RenderPartial("_IndexBlogList", Model.ItemsViewModels?.OrderByDescending(x => x.SortingNumber).ToList()); }
    </div>
</section>