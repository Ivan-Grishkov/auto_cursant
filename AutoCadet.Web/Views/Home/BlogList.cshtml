@model AutoCadet.Models.BlogListPageViewModel
@{
    Layout = "~/Views/Shared/_DetailsPageLayout.cshtml";
    ViewBag.HeaderTitle = "Полезные советы";
    ViewBag.HeaderSubTitle = "Рекомендации от инструкторов по вождению";

    ViewData["MetaInfo"] = "Рекомендации от инструкторов по вождению. как сдать экзамен";
    ViewData["MetaDescription"] = "Полезные советы";
    ViewData["MetaKeywords"] = "Полезные советы, сдать экзамен по вождению";
    ViewData["Title"] = "Полезные советы сдающим на категорию B";
}

@{
    var currentPageUrl = Url.Action("Blog", "Home", Request?.Url?.Scheme);
    var hrefFb = "http://www.facebook.com/sharer.php?u=" + currentPageUrl;
    var hrefVk = "http://vk.com/share.php?url=" + currentPageUrl;
    var hrefTwitter = "https://twitter.com/intent/tweet?text=" + $"{currentPageUrl}";
}

@section detailsH1 {
    Полезные советы сдающим на категорию B

    <ul class="list-inline social-buttons text-center pull-right">
        <li title="Twitter">
            <a href="@hrefTwitter"><i class="fa fa-twitter"></i></a>
        </li>
        <li title="Facebook">
            <a href="@hrefFb"><i class="fa fa-facebook"></i></a>
        </li>
        <li title="VK">
            <a href="@hrefVk"><i class="fa fa-vk"></i></a>
        </li>
    </ul>
}

@section breadcrumb {
    <ul class="breadcrumb">
        <li><a href="/">Главная</a></li>
        <li class="active">Видео Уроки</li>
    </ul>
}

<section id="portfolio" class="bg-light-gray">
    @{ Html.RenderPartial("_IndexBlogList", Model.ItemsViewModels?.OrderByDescending(x => x.SortingNumber).ToList()); }
</section>