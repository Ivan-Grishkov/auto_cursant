@model AutoCadet.Models.VideoLessonsPageViewModel
@{
    Layout = "~/Views/Shared/_DetailsPageLayout.cshtml";
    ViewBag.HeaderTitle = "Видео уроки вождения";
    ViewBag.HeaderSubTitle = "Интерактивное обучение вождению автомобиля не выходя из дома";

    ViewData["MetaInfo"] = "Видео уроки вождения";
    ViewData["MetaDescription"] = "Интерактивное обучение вождению автомобиля не выходя из дома";
    ViewData["MetaKeywords"] = "Вождение";
    ViewData["Title"] = "Видео уроки вождения список";
}

@{
    var currentPageUrl = Url.Action("VideoLessons", "Home", Request?.Url?.Scheme);
    var hrefFb = "http://www.facebook.com/sharer.php?u=" + currentPageUrl;
    var hrefVk = "http://vk.com/share.php?url=" + currentPageUrl;
    var hrefTwitter = "https://twitter.com/intent/tweet?text=" + $"{currentPageUrl}";
}

@section detailsH1 {
    Лучшие инструкторы минска объясняют как проехать маршруты ГАИ

    <ul class="list-inline social-buttons text-center pull-right">
        <li title="Twitter">
            <a href="@hrefTwitter"><i class="fa fa-twitter"></i></a>
        </li>
        <li title="Facebook">
            <a href="@hrefFb"><i class="fa fa-facebook"></i></a>
        </li>
        <li title="VK">
            <a href="@hrefVk"><i class="fa fa-vk"></i></a>
        </li>
    </ul>
}

@section breadcrumb {
    <ul class="breadcrumb">
        <li><a href="/">Главная</a></li>
        <li class="active">Видео Уроки</li>
    </ul>
}

<section id="portfolio" class="bg-light-gray">
    @{ Html.RenderPartial("_IndexVideosList", Model.VideoLessonViewModels?.OrderByDescending(x => x.SortingNumber).ToList()); }
</section>