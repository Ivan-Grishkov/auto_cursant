@model IList<AutoCadet.Models.CommentViewModel>

<div class="container">
    <div class="row">
        <div class="col-lg-12 text-center">
            <h2 class="section-heading">Отзывы</h2>
            <h3 class="section-subheading text-muted">Всех послушай, но решай сам.</h3>
        </div>
    </div>
    <div class="row">
        @if (Model != null)
        {
            foreach (var comment in Model)
            {
                <div class="col-sm-4">
                    <div class="team-member">
                        @*<img src="img/team/1.jpg" class="img-responsive img-circle" alt="">*@
                        <blockquote>
                            <p title="@comment.InstructorName">
                                @comment.InstructorName
                            </p>
                            <p class="text-left" title="@comment.Text">@comment.Text</p>
                            <footer class="text-muted text-right">
                                <span class="text-left pull-left">
                                    @Html.DisplayFor(x => comment.Score)
                                </span>
                                <span class="text-right">@comment.Name</span>
                            </footer>
                        </blockquote>
                    </div>
                </div>
            }
        }
    </div>

    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 text-center">
            <p class="large text-muted">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Aut eaque, laboriosam veritatis, quos non quis ad perspiciatis, totam corporis ea, alias ut unde.</p>
        </div>
    </div>
</div>