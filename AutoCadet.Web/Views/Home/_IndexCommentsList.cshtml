@model IList<AutoCadet.Models.CommentViewModel>

<div class="container">
    <div class="row">
        <div class="col-lg-12 text-center">
            <h2 class="section-heading">Отзывы</h2>
            <h3 class="section-subheading text-muted">Всех послушай, но решай сам.</h3>
        </div>
    </div>
    <div class="row">
        @foreach (var comment in Model)
        {
            <div class="col-sm-4">
                <div class="team-member">
                    @*<img src="img/team/1.jpg" class="img-responsive img-circle" alt="">*@
                    <blockquote>
                        <div class="row">
                            <div class="col-lg-9">
                                <span class="text-right">@comment.InstructorName</span>
                            </div>
                            <div class="col-lg-3">
                                <span class="text-right">
                                    @Html.DisplayFor(x => comment.DisplayScore)
                                </span>
                            </div>
                        </div>
                        <p class="text-left">@comment.Text</p>
                        <footer class="text-muted text-right">@comment.Name</footer>
                    </blockquote>
                </div>
            </div>
        }
    </div>

    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 text-center">
            <p class="large text-muted">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Aut eaque, laboriosam veritatis, quos non quis ad perspiciatis, totam corporis ea, alias ut unde.</p>
        </div>
    </div>
</div>