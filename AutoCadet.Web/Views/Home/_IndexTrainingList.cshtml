@model IList<AutoCadet.Models.TrainingViewModel>

<div class="container">
    <div class="row">
        <div class="col-lg-12 text-center">
            <h2 class="section-heading">Частные уроки вождения</h2>
            <h3 class="section-subheading text-muted">Нацеленность на результат</h3>
        </div>
    </div>
    @{
        var itemsCount = Model.Count;
        var itemsPerRow = 4;
        var rowsCount = itemsCount / itemsPerRow + (itemsCount % itemsPerRow > 0 ? 1 : 0);
    }
    @for (var j = 0; j < rowsCount; j++)
    {
        <div class="row text-center">
            @for (var i = 0; i < itemsPerRow; i++)
            {
                var k = j * itemsPerRow + i;

                if (itemsCount <= k)
                {
                    break;
                }

                <div class="col-md-3">
                    <a href="@Url.Action("Training", new { prettyUrl = Model[k].UrlName })">
                        <span class="fa-stack fa-4x">
                            <i class="fa fa-circle fa-stack-2x text-primary"></i>
                            <i class="fa @Model[k].ListIcon fa-stack-1x fa-inverse"></i>
                        </span>
                        <h4 class="service-heading">@Model[k].ListHeader</h4>
                        <p class="text-muted">@Model[k].ListDescription</p>
                    </a>
                </div>
            }
        </div>
    }
</div>