@model IList<AutoCadet.Models.InstructorViewModel>
<!-- Portfolio Grid Section -->

    <div class="row carousel-row">

        <div id="instructorsCarousel" class="carousel slide col-md-12" data-ride="carousel">

            @{
                var itemsCount = Model.Count;
                var itemsPerPage = 3;
                var pagesCount = itemsCount / itemsPerPage + (itemsCount % itemsPerPage > 0 ? 1 : 0);
            }

            <ol class="carousel-indicators">
                @for (var i = 0; i < pagesCount; i++)
                {
                    <li data-target="#instructorsCarousel" data-slide-to="@i" class="@(i == 0 ? " active" : string.Empty)"></li>
                }
            </ol>

            <div class="carousel-inner" role="listbox">
                @for (var j = 0; j < pagesCount; j++)
                {
                    <div class="row item@(j == 0 ? " active" : string.Empty)">

                        @for (var i = 0; i < itemsPerPage; i++)
                        {
                            var k = j * itemsPerPage + i;

                            if (itemsCount <= k)
                            {
                                break;
                            }
                            <div class="col-md-4 col-sm-6 portfolio-item">
                                <a href="@Url.Action("Instructors", new {prettyUrl = Model[k].UrlName})" class="portfolio-link">
                                    <div class="portfolio-hover">
                                        <div class="portfolio-hover-content">
                                            <i class="fa fa-list fa-3x"></i>
                                        </div>
                                    </div>
                                    @{
                                        if (Model[k].ThumbnailImage != null && Model[k].ThumbnailImage.Length > 0)
                                        {
                                            var base64String = Convert.ToBase64String(Model[k].ThumbnailImage);
                                            <img src="@($"data:image/png;base64,{base64String}")" alt="@($"фото: {Model[k].FirstName} {Model[k].LastName}")" class="img-responsive img-list-instructors"/>
                                        }
                                        else
                                        {
                                            <img src="/img/paris.jpg" class="img-responsive img-list-instructors" alt="@($"фото: {Model[k].FirstName} {Model[k].LastName}")">
                                        }
                                    }
                                </a>
                                <div class="portfolio-caption" title="@Model[k].Phone">
                                    <h4>@($"{Model[k].FirstName} {Model[k].LastName}")</h4>
                                    <div class="row text-muted text-right">
                                        <span class="text-left pull-left">
                                            @{
                                                @Html.DisplayFor(x => Model[k].AverageScore)
                                            }
                                        </span>
                                        <span class="text-right pull-right">@($"{Model[k].Price} р.")</span>
                                    </div>
                                    @{
                                        var instructorUrl = Url.Action("Instructors", "Home", new {prettyUrl = Model[k].UrlName}, Request?.Url?.Scheme);
                                        var hrefFb = "http://www.facebook.com/sharer.php?u=" + instructorUrl;
                                        var hrefVk = "http://vk.com/share.php?url=" + instructorUrl;
                                        var hrefTwitter = "https://twitter.com/intent/tweet?text=Я%20учусь%20управлять%20автомобилем%20у%20инструктора%20" + $"{Model[k].FirstName}%20{Model[k].LastName}%20{instructorUrl}";
                                    }
                                    <ul class="list-inline social-buttons text-center">
                                        <li title="Twitter">
                                            <a href="@hrefTwitter">
                                                <i class="fa fa-twitter"></i>
                                            </a>
                                        </li>
                                        <li title="Facebook">
                                            <a href="@hrefFb">
                                                <i class="fa fa-facebook"></i>
                                            </a>
                                        </li>
                                        <li title="VK">
                                            <a href="@hrefVk">
                                                <i class="fa fa-vk"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        }
                    </div>
                }

            </div>


            <a class="right carousel-control" href="#instructorsCarousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
            <a class="left carousel-control" href="#instructorsCarousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
        </div>


    </div>