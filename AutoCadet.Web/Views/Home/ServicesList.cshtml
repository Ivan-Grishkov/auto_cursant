@model AutoCadet.Models.ServicesListPageViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="no-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-2 align-center">
                <a class="btn btn-primary go-home" href="/">Уроки вождения</a>
            </div>
            <div class="col-lg-10 text-justify">
                <h1 class="section-heading text-primary">Наши услуги</h1>
            </div>
        </div>
    </div>
</header>

<section id="portfolio" class="bg-light-gray">
    @{ Html.RenderPartial("_IndexServicesList", Model.ItemsViewModels.OrderByDescending(x => x.SortingNumber).ToList()); }
</section>