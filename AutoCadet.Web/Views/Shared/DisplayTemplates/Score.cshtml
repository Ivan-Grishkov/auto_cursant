@model double?

<span class="rating-display" title="@($"{Model:N2}") stars">
    <input type="radio" value="5" checked="@(Model >= 4.8 ? true : (bool?)null)" /><label class="full"></label>
    <input type="radio" value="4.5" checked="@(Model < 4.8 && Model >= 4.3 ? true : (bool?)null)" /><label class="half"></label>
    <input type="radio" value="4" checked="@(Model < 4.3 && Model >= 3.8 ? true : (bool?)null)" /><label class="full"></label>
    <input type="radio" value="3.5" checked="@(Model < 3.8 && Model >= 3.3 ? true : (bool?)null)" /><label class="half"></label>
    <input type="radio" value="3" checked="@(Model < 3.3 && Model >= 2.8 ? true : (bool?)null)" /><label class="full"></label>
    <input type="radio" value="2.5" checked="@(Model < 2.8 && Model >= 2.3 ? true : (bool?)null)" /><label class="half"></label>
    <input type="radio" value="2" checked="@(Model < 2.3 && Model >= 1.8 ? true : (bool?)null)" /><label class="full"></label>
    <input type="radio" value="1.5" checked="@(Model < 1.8 && Model >= 1.3 ? true : (bool?)null)" /><label class="half"></label>
    <input type="radio" value="1" checked="@(Model < 1.3 && Model >= 0.8 ? true : (bool?)null)" /><label class="full"></label>
    <input type="radio" value="0.5" checked="@(Model < 0.8 ? true : (bool?)null)" /><label class="half"></label>
</span>