@model double?
@{ var guid = Guid.NewGuid();}

<fieldset class="rating-display">
    <input type="radio" id="star5" name="Score-@guid" value="5" checked="@(Model >= 4.8 ? true : (bool?)null)" /><label class="full" for="star5" title="Awesome - 5 stars"></label>
    <input type="radio" id="star4half" name="Score-@guid" value="4.5" checked="@(Model < 4.8 && Model >= 4.3 ? true : (bool?)null)" /><label class="half" for="star4half" title="Pretty good - 4.5 stars"></label>
    <input type="radio" id="star4" name="Score-@guid" value="4" checked="@(Model < 4.3 && Model >= 3.8 ? true : (bool?)null)" /><label class="full" for="star4" title="Pretty good - 4 stars"></label>
    <input type="radio" id="star3half" name="Score-@guid" value="3.5" checked="@(Model < 3.8 && Model >= 3.3 ? true : (bool?)null)" /><label class="half" for="star3half" title="Meh - 3.5 stars"></label>
    <input type="radio" id="star3" name="Score-@guid" value="3" checked="@(Model < 3.3 && Model >= 2.8 ? true : (bool?)null)" /><label class="full" for="star3" title="Meh - 3 stars"></label>
    <input type="radio" id="star2half" name="Score-@guid" value="2.5" checked="@(Model < 2.8 && Model >= 2.3 ? true : (bool?)null)" /><label class="half" for="star2half" title="Kinda bad - 2.5 stars"></label>
    <input type="radio" id="star2" name="Score-@guid" value="2" checked="@(Model < 2.3 && Model >= 1.8 ? true : (bool?)null)" /><label class="full" for="star2" title="Kinda bad - 2 stars"></label>
    <input type="radio" id="star1half" name="Score-@guid" value="1.5" checked="@(Model < 1.8 && Model >= 1.3 ? true : (bool?)null)" /><label class="half" for="star1half" title="Meh - 1.5 stars"></label>
    <input type="radio" id="star1" name="Score-@guid" value="1" checked="@(Model < 1.3 && Model >= 0.8 ? true : (bool?)null)" /><label class="full" for="star1" title="Sucks big time - 1 star"></label>
    <input type="radio" id="starhalf" name="Score-@guid" value="0.5" checked="@(Model < 0.8 ? true : (bool?)null)" /><label class="half" for="starhalf" title="Sucks big time - 0.5 stars"></label>
</fieldset>